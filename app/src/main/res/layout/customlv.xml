<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgV"
            android:layout_width="120dp"
            android:layout_height="120dp" />

        <TextView
            android:id="@+id/persname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="TextView"
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/lastmatch" />

        <TextView
            android:id="@+id/lastmatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/persname"
            android:layout_marginStart="18dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/imgV"
            android:text="TextView" />

        <TextView
            android:id="@+id/country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_alignBaseline="@+id/lastmatch"
            android:layout_alignBottom="@+id/lastmatch"
            android:layout_toEndOf="@+id/persname"
            android:layout_marginStart="26dp" />

        <ImageView
            android:id="@+id/chevron"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/chevron"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</android.support.v7.widget.CardView>